{
  "parser": "babel-eslint",
  "extends": [
    "airbnb",
    "prettier",
    "prettier/react"
  ],
  "plugins": [
    "prettier"
  ],
  "rules": {
    "prettier/prettier": 1,
    "react/jsx-one-expression-per-line": 0,
    "react/destructuring-assignment": 0
  },
  "settings": {
    "import/resolver": {
      "eslint-import-resolver-typescript": [".ts", ".tsx"]
    }
  },
  "overrides": [
    {
      "files": ["**/*.ts", "**/*.tsx"],
      "parser": "typescript-eslint-parser",
      "rules": {
        "no-undef": "off",
        "no-unused-vars": "off",
        "react/jsx-filename-extension": [1, { "extensions": [".tsx"] }]
      }
    }
  ]
}
